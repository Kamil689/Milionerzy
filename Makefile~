CC=gcc
CFLAGS=-ansi -Wall -pedantic
LDFLAGS=-lncurses

all: main.o interfejs.o includeset.o 100.o run.o
	$(CC) $(CFLAGS) -o main.o interfejs.o includeset.o 100.o run.o $(LDFLAGS)

main.o: main.c
	$(CC) $(CFLAGS) -c projekt13glowny.c

interfejs.o: interfejs.c
	$(CC) $(CFLAGS) -c interfejs.c

includeset.o: includeset.c
	$(CC) $(CFLAGS) -c includeset.c 

100.o: 100.c
	$(CC) $(CFLAGS) -c 100.c 

run.o: run.c
	$(CC) $(CFLAGS) -c run.c 

clean: main.o interfejs.o includeset.o 100.o run.o
	rm *.o *.*~ program
